<h2>My Profile</h2>

<%= image_tag avatar_url(@user) %>

<div id="user_profile">
  <b>First Name:</b> <%=h @user.first_name %><br/>
  <b>Last Name:</b> <%=h @user.last_name %><br/>
  <b>Email:</b> <%=h @user.email %><br/>
  <% if signed_in? && current_user.id == @user.id %><%= link_to 'Edit', edit_user_path(current_user) %><% end %>
</div>
